<div id="feedback_form_<%= domain_check.id %>" class="sticky-card p-6 rotate-subtle-left">
  <div class="absolute bottom-0 left-0 right-0 h-3 stripes-yellow rounded-b-sm"></div>
  
  <div class="flex items-center gap-3 mb-6">
    <div class="w-10 h-10 bg-retro-yellow rounded-lg flex items-center justify-center">
      <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
      </svg>
    </div>
    <div>
      <h3 class="text-lg font-bold">Rate This Report</h3>
      <p class="text-sm text-gray-500">Your feedback helps us improve</p>
    </div>
  </div>
  
  <%= form_with model: feedback, url: check_feedbacks_path(domain_check), local: true, class: "space-y-6" do |form| %>
    <%= form.hidden_field :domain_check_id, value: domain_check.id %>
    
    <% if feedback.errors.any? %>
      <div class="p-4 bg-retro-red-light border-l-4 border-retro-red rounded-r-lg">
        <div class="flex items-center gap-2 text-retro-red font-bold text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= feedback.errors.full_messages.join(", ") %>
        </div>
      </div>
    <% end %>

    <div>
      <div class="text-sm font-bold text-gray-700 mb-3">How accurate was this report?</div>
      <div class="flex gap-2 justify-center">
        <% (1..5).each do |rating| %>
          <label class="cursor-pointer group">
            <%= form.radio_button :accuracy_rating, rating, class: "sr-only peer" %>
            <span class="flex items-center justify-center w-12 h-12 rounded-xl border-3 border-gray-200 
                         peer-checked:border-retro-purple peer-checked:bg-retro-purple peer-checked:text-white 
                         group-hover:border-retro-purple-light group-hover:bg-retro-purple-light
                         transition-all duration-200 font-bold text-lg">
              <%= rating %>
            </span>
          </label>
        <% end %>
      </div>
      <div class="flex justify-between text-xs text-gray-400 mt-2 px-2">
        <span>ðŸ˜• Poor</span>
        <span>ðŸŽ‰ Excellent</span>
      </div>
    </div>

    <div>
      <div class="text-sm font-bold text-gray-700 mb-2">Additional comments (optional)</div>
      <%= form.text_area :comments, 
          rows: 3, 
          placeholder: "Any inaccuracies or suggestions for improvement?",
          class: "w-full text-sm border-2 border-gray-200 focus:border-retro-purple rounded-lg px-4 py-3 bg-cream placeholder:text-gray-400 transition-colors resize-none" %>
    </div>

    <div>
      <%= form.submit "Submit Feedback â†’", 
          class: "btn-retro-purple w-full justify-center cursor-pointer" %>
    </div>
  <% end %>
</div>
