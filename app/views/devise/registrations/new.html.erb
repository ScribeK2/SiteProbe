<div class="max-w-md mx-auto">
  <%# Sign up card %>
  <div class="sticky-card tape-corners p-8 pt-12">
    <div class="absolute bottom-0 left-0 right-0 h-3 stripes-green rounded-b-sm"></div>
    
    <div class="text-center mb-8">
      <div class="w-16 h-16 mx-auto mb-4 bg-retro-green rounded-xl flex items-center justify-center">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-extrabold tracking-tight mb-2">Create account</h1>
      <p class="text-gray-600">Start monitoring your domains today</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <label class="block text-sm font-bold text-gray-700 mb-2">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Email
          </span>
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full text-lg font-mono border-2 border-gray-200 focus:border-black rounded-lg px-4 py-3 bg-cream placeholder:text-gray-400 transition-colors",
            placeholder: "you@example.com" %>
      </div>

      <div>
        <label class="block text-sm font-bold text-gray-700 mb-2">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            Password
          </span>
          <% if @minimum_password_length %>
            <span class="font-normal text-gray-500 ml-2">(<%= @minimum_password_length %> characters min)</span>
          <% end %>
        </label>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full text-lg border-2 border-gray-200 focus:border-black rounded-lg px-4 py-3 bg-cream placeholder:text-gray-400 transition-colors",
            placeholder: "••••••••" %>
      </div>

      <div>
        <label class="block text-sm font-bold text-gray-700 mb-2">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            Confirm Password
          </span>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full text-lg border-2 border-gray-200 focus:border-black rounded-lg px-4 py-3 bg-cream placeholder:text-gray-400 transition-colors",
            placeholder: "••••••••" %>
      </div>

      <div class="pt-2">
        <%= f.submit "Create Account →", class: "btn-retro-yellow w-full justify-center text-lg py-4 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# Benefits %>
  <div class="mt-8 grid grid-cols-3 gap-3 text-center">
    <div class="p-3">
      <div class="w-8 h-8 mx-auto mb-2 bg-retro-purple-light rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-retro-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      </div>
      <div class="text-xs font-bold">Free</div>
    </div>
    <div class="p-3">
      <div class="w-8 h-8 mx-auto mb-2 bg-retro-blue-light rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-retro-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <div class="text-xs font-bold">Instant</div>
    </div>
    <div class="p-3">
      <div class="w-8 h-8 mx-auto mb-2 bg-retro-orange-light rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-retro-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
      </div>
      <div class="text-xs font-bold">Alerts</div>
    </div>
  </div>

  <%# Links %>
  <div class="mt-6 text-center space-y-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
