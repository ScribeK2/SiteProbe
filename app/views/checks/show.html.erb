                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <% if dns[:errors].present? %>
                <%= dns[:errors].join(", ") %>
              <% else %>
                Failed to retrieve DNS records
              <% end %>
            </div>
          </div>
        <% end %>
      </section>
    <% end %>

    <%# Subdomain Scan Results %>
    <% if @domain_check.subdomain_data.present? %>
      <section class="sticky-card p-6 card-hover">
        <div class="absolute bottom-0 left-0 right-0 h-3 stripes-yellow rounded-b-sm"></div>
        
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-retro-yellow rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-extrabold">Subdomains</h2>
        </div>
        
        <% subdomains = @domain_check.subdomain_data.with_indifferent_access %>
        <% if subdomains[:success] && subdomains[:found].present? %>
          <div class="mb-4 flex items-center gap-3">
            <span class="px-3 py-1 text-sm font-bold bg-retro-green text-white rounded-full">
              <%= subdomains[:found].length %> found
            </span>
            <% if subdomains[:not_found].present? %>
              <span class="text-xs text-gray-500">(scanned <%= subdomains[:found].length + subdomains[:not_found].length %>)</span>
            <% end %>
          </div>

          <% grouped = subdomains[:found].group_by { |s| s[:type] || s["type"] || "other" } %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% grouped.each do |category, items| %>
              <div class="p-4 bg-cream rounded-lg">
                <div class="flex items-center justify-between mb-3">
                  <span class="font-bold text-sm uppercase"><%= category.titleize %></span>
                  <span class="px-2 py-0.5 text-xs font-bold bg-retro-yellow rounded-full"><%= items.length %></span>
                </div>
                <div class="space-y-2">
                  <% items.each do |sub| %>
                    <div class="p-2 bg-white rounded flex items-center justify-between">
                      <span class="font-mono text-xs font-bold truncate"><%= sub[:fqdn] || sub["fqdn"] %></span>
                      <span class="text-xs text-gray-400 font-mono"><%= (sub[:a_records] || sub["a_records"] || []).first %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% elsif subdomains[:success] && subdomains[:found].blank? %>
          <div class="text-center p-8 bg-cream rounded-lg">
            <div class="text-gray-500 font-semibold">No common subdomains found</div>
          </div>
        <% else %>
          <div class="p-4 bg-retro-red-light rounded-lg border border-retro-red">
            <div class="flex items-center gap-2 text-retro-red font-bold">Subdomain scan failed</div>
          </div>
        <% end %>
      </section>
    <% elsif @domain_check.scan_subdomains? && @domain_check.completed? %>
      <section class="sticky-card p-6">
        <div class="absolute bottom-0 left-0 right-0 h-3 stripes-yellow rounded-b-sm"></div>
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-retro-yellow rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-extrabold">Subdomains</h2>
        </div>
        <div class="text-gray-500">Subdomain scan did not return results.</div>
      </section>
    <% end %>

    <%# Feedback Form %>
    <% if @domain_check.completed? %>
      <section class="mt-12">
        <% existing_feedback = @domain_check.feedbacks.find_by(user: current_user) %>
        <% if existing_feedback %>
          <%= render "feedbacks/thanks", domain_check: @domain_check %>
        <% else %>
          <%= render "feedbacks/form", domain_check: @domain_check, feedback: Feedback.new %>
        <% end %>
      </section>
    <% end %>
  </div>
</div>

<% if @domain_check.pending? || @domain_check.processing? %>
  <meta http-equiv="refresh" content="2">
  <div data-controller="check-updates" data-check-updates-check-id-value="<%= @domain_check.id %>"></div>
<% end %>
