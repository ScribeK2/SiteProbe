<div>
  <%# Header %>
  <div class="mb-10">
    <div class="flex items-center justify-between mb-6">
      <%= link_to new_check_path, class: "flex items-center gap-2 text-sm font-bold text-gray-500 hover:text-black transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        New Check
      <% end %>
      <% if @domain_check.completed? %>
        <div class="flex items-center gap-2">
          <%= link_to check_export_path(@domain_check, format: :csv), class: "btn-retro-outline text-xs py-2 px-3" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            CSV
          <% end %>
          <%= link_to check_export_path(@domain_check, format: :json), class: "btn-retro-outline text-xs py-2 px-3" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            JSON
          <% end %>
        </div>
      <% end %>
    </div>
    
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-3"><%= @domain_check.domain %></h1>
    
    <div class="flex items-center gap-3">
      <span class="text-gray-500 text-sm">
        Checked <%= time_ago_in_words(@domain_check.created_at) %> ago
      </span>
      <% if @domain_check.completed? %>
        <span class="flex items-center gap-1.5 text-xs font-bold px-3 py-1 bg-retro-green-light text-retro-green rounded-full">
          <span class="status-dot-healthy"></span>
          Completed
        </span>
      <% elsif @domain_check.processing? %>
        <span class="flex items-center gap-1.5 text-xs font-bold px-3 py-1 bg-retro-blue-light text-retro-blue rounded-full">
          <span class="w-2 h-2 rounded-full bg-retro-blue animate-pulse-dot"></span>
          Processing
        </span>
      <% elsif @domain_check.failed? %>
        <span class="flex items-center gap-1.5 text-xs font-bold px-3 py-1 bg-retro-red-light text-retro-red rounded-full">
          <span class="status-dot-critical"></span>
          Failed
        </span>
      <% else %>
        <span class="flex items-center gap-1.5 text-xs font-bold px-3 py-1 bg-gray-200 text-gray-600 rounded-full">
          <span class="w-2 h-2 rounded-full bg-gray-400"></span>
          Pending
        </span>
      <% end %>
    </div>
  </div>

  <%# Processing State %>
  <% if @domain_check.processing? || @domain_check.pending? %>
    <div class="sticky-card tape-top p-8 pt-12 mb-10 text-center">
      <div class="absolute bottom-0 left-0 right-0 h-3 stripes-blue rounded-b-sm"></div>
      <div class="w-16 h-16 mx-auto mb-4 bg-retro-blue-light rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-retro-blue animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold mb-2">Analyzing domain...</h3>
      <p class="text-gray-600">This usually takes a few seconds</p>
    </div>
  <% end %>

  <% if @domain_check.completed? %>
    <%# Collect all issues from all checkers %>
    <% all_issues = [] %>
    <% if @domain_check.whois_data.present? %>
      <% whois = @domain_check.whois_data.with_indifferent_access %>
      <% all_issues.concat(whois[:issues] || []) if whois[:success] %>
    <% end %>
    <% if @domain_check.dns_data.present? %>
      <% dns = @domain_check.dns_data.with_indifferent_access %>
      <% all_issues.concat(dns[:issues] || []) if dns[:success] %>
    <% end %>
    <% if @domain_check.ssl_data.present? %>
      <% ssl = @domain_check.ssl_data.with_indifferent_access %>
      <% all_issues.concat(ssl[:issues] || []) %>
    <% end %>
    <% if @domain_check.http_data.present? %>
      <% http = @domain_check.http_data.with_indifferent_access %>
      <% all_issues.concat(http[:issues] || []) %>
    <% end %>
    <% if @domain_check.email_data.present? %>
      <% email = @domain_check.email_data.with_indifferent_access %>
      <% all_issues.concat(email[:issues] || []) %>
    <% end %>

    <%# Issues Board - Retro style columns %>
    <section class="mb-12">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-8 h-8 bg-black rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <h2 class="text-2xl font-extrabold">Health Summary</h2>
      </div>
      
      <% if all_issues.any? %>
        <% 
          critical_issues = all_issues.select { |i| (i[:severity] || i["severity"]) == "critical" }
          warning_issues = all_issues.select { |i| (i[:severity] || i["severity"]) == "warning" }
          info_issues = all_issues.select { |i| (i[:severity] || i["severity"]) == "info" }
        %>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <%# Critical Issues Column %>
          <div>
            <div class="column-header bg-retro-red text-white mb-4 flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              Critical (<%= critical_issues.count %>)
            </div>
            <div class="space-y-3 card-column max-h-96 overflow-y-auto pr-2">
              <% if critical_issues.any? %>
                <% critical_issues.each_with_index do |issue, idx| %>
                  <div class="sticky-card p-4 <%= idx.even? ? 'rotate-subtle-left' : 'rotate-subtle-right' %>">
                    <div class="absolute bottom-0 left-0 right-0 h-2 stripes-red rounded-b-sm"></div>
                    <div class="font-bold text-sm text-red-800 mb-1"><%= issue[:title] || issue["title"] %></div>
                    <div class="text-xs text-gray-600"><%= issue[:message] || issue["message"] %></div>
                    <% if (issue[:recommendation] || issue["recommendation"]).present? %>
                      <div class="mt-2 text-xs text-gray-500 italic"><%= issue[:recommendation] || issue["recommendation"] %></div>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="sticky-card p-4 text-center bg-retro-green-light/50">
                  <div class="text-retro-green font-bold text-sm">None! üéâ</div>
                </div>
              <% end %>
            </div>
          </div>
          
          <%# Warning Issues Column %>
          <div>
            <div class="column-header bg-retro-orange text-white mb-4 flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Warnings (<%= warning_issues.count %>)
            </div>
            <div class="space-y-3 card-column max-h-96 overflow-y-auto pr-2">
              <% if warning_issues.any? %>
                <% warning_issues.each_with_index do |issue, idx| %>
                  <div class="sticky-card p-4 <%= idx.odd? ? 'rotate-subtle-left' : 'rotate-subtle-right' %>">
                    <div class="absolute bottom-0 left-0 right-0 h-2 stripes-orange rounded-b-sm"></div>
                    <div class="font-bold text-sm text-orange-800 mb-1"><%= issue[:title] || issue["title"] %></div>
                    <div class="text-xs text-gray-600"><%= issue[:message] || issue["message"] %></div>
                    <% if (issue[:recommendation] || issue["recommendation"]).present? %>
                      <div class="mt-2 text-xs text-gray-500 italic"><%= issue[:recommendation] || issue["recommendation"] %></div>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="sticky-card p-4 text-center bg-retro-green-light/50">
                  <div class="text-retro-green font-bold text-sm">None! üéâ</div>
                </div>
              <% end %>
            </div>
          </div>
          
          <%# Info Column %>
          <div>
            <div class="column-header bg-retro-blue text-white mb-4 flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Info (<%= info_issues.count %>)
            </div>
            <div class="space-y-3 card-column max-h-96 overflow-y-auto pr-2">
              <% if info_issues.any? %>
                <% info_issues.each_with_index do |issue, idx| %>
                  <div class="sticky-card p-4 <%= idx.even? ? 'rotate-subtle-left' : 'rotate-subtle-right' %>">
                    <div class="absolute bottom-0 left-0 right-0 h-2 stripes-blue rounded-b-sm"></div>
                    <div class="font-bold text-sm text-blue-800 mb-1"><%= issue[:title] || issue["title"] %></div>
                    <div class="text-xs text-gray-600"><%= issue[:message] || issue["message"] %></div>
                  </div>
                <% end %>
              <% else %>
                <div class="sticky-card p-4 text-center bg-gray-50">
                  <div class="text-gray-500 font-bold text-sm">No info items</div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <%# All healthy card %>
        <div class="sticky-card tape-corners p-8 pt-12 text-center">
          <div class="absolute bottom-0 left-0 right-0 h-3 stripes-green rounded-b-sm"></div>
          <div class="w-16 h-16 mx-auto mb-4 bg-retro-green-light rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-retro-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-green-800 mb-2">Everything looks great!</h3>
          <p class="text-gray-600">All checks passed without any issues.</p>
        </div>
      <% end %>
    </section>
  <% end %>

  <%# Diagnostic Sections %>
  <div id="check-results" class="space-y-10">
    
    <%# SSL Certificate Section %>
    <% if @domain_check.ssl_data.present? %>
      <section class="sticky-card p-6 card-hover">
        <div class="absolute bottom-0 left-0 right-0 h-3 stripes-green rounded-b-sm"></div>
        
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-retro-green rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-extrabold">SSL Certificate</h2>
        </div>
        
        <% ssl = @domain_check.ssl_data.with_indifferent_access %>
        <% if ssl[:success] && ssl[:certificate].present? %>
          <% cert = ssl[:certificate].with_indifferent_access %>
          <div class="space-y-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="p-4 bg-cream rounded-lg">
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Common Name</div>
                <div class="font-mono font-bold text-sm truncate"><%= cert[:common_name] || "N/A" %></div>
              </div>
              
              <div class="p-4 bg-cream rounded-lg">
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Issuer</div>
                <div class="font-bold text-sm truncate"><%= cert[:issuer_organization] || cert[:issuer_name] || "N/A" %></div>
              </div>
              
              <div class="p-4 bg-cream rounded-lg">
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Valid From</div>
                <div class="font-bold text-sm">
                  <% begin %>
                    <%= Date.parse(cert[:not_before]).strftime("%b %d, %Y") %>
                  <% rescue %>
                    <%= cert[:not_before] %>
                  <% end %>
                </div>
              </div>
              
              <div class="p-4 bg-cream rounded-lg">
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Expires</div>
                <div class="font-bold text-sm flex items-center gap-2">
                  <% begin %>
                    <% expiry = Date.parse(cert[:not_after]) %>
                    <% days_until = cert[:days_until_expiry] || (expiry - Date.today).to_i %>
                    <%= expiry.strftime("%b %d, %Y") %>
                    <% if days_until < 0 %>
                      <span class="px-2 py-0.5 text-xs font-bold bg-retro-red text-white rounded-full">Expired</span>
                    <% elsif days_until <= 30 %>
                      <span class="px-2 py-0.5 text-xs font-bold bg-retro-red text-white rounded-full"><%= days_until %>d</span>
                    <% elsif days_until <= 90 %>
                      <span class="px-2 py-0.5 text-xs font-bold bg-retro-orange text-white rounded-full"><%= days_until %>d</span>
                    <% else %>
                      <span class="px-2 py-0.5 text-xs font-bold bg-retro-green text-white rounded-full"><%= days_until %>d</span>
                    <% end %>
                  <% rescue %>
                    <%= cert[:not_after] %>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <div class="p-3 bg-gray-50 rounded-lg">
                <div class="text-xs text-gray-500 mb-1">Key Size</div>
                <div class="font-mono font-bold"><%= cert[:key_size] ? "#{cert[:key_size]} bit" : "N/A" %></div>
              </div>
              <div class="p-3 bg-gray-50 rounded-lg">
                <div class="text-xs text-gray-500 mb-1">Signature</div>
                <div class="font-mono font-bold text-sm"><%= cert[:signature_algorithm] || "N/A" %></div>
              </div>
              <% if cert[:is_self_signed] %>
                <div class="p-3 bg-retro-yellow-light rounded-lg border border-retro-yellow">
                  <div class="text-xs text-amber-700 font-bold">‚ö†Ô∏è Self-Signed</div>
                </div>
              <% end %>
            </div>

            <% if cert[:subject_alt_names].present? && cert[:subject_alt_names].length > 0 %>
              <div>
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">Subject Alt Names</div>
                <div class="flex flex-wrap gap-2">
                  <% cert[:subject_alt_names].first(10).each do |san| %>
                    <span class="px-3 py-1 bg-retro-purple-light text-retro-purple font-mono text-sm rounded-full"><%= san %></span>
                  <% end %>
                  <% if cert[:subject_alt_names].length > 10 %>
                    <span class="px-3 py-1 bg-gray-200 text-gray-600 text-sm rounded-full">+<%= cert[:subject_alt_names].length - 10 %> more</span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div>
              <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">TLS Protocols</div>
              <div class="flex flex-wrap gap-2">
                <% (ssl[:supported_protocols] || []).each do |protocol| %>
                  <span class="px-3 py-1 bg-retro-green-light text-retro-green font-bold text-sm rounded-full"><%= protocol %></span>
                <% end %>
                <% (ssl[:deprecated_protocols] || []).each do |protocol| %>
                  <span class="px-3 py-1 bg-retro-red-light text-retro-red font-bold text-sm rounded-full"><%= protocol %> ‚ö†Ô∏è</span>
                <% end %>
              </div>
            </div>

            <% if ssl[:chain].present? && ssl[:chain].length > 1 %>
              <div>
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">Certificate Chain</div>
                <div class="space-y-2">
                  <% ssl[:chain].each_with_index do |chain_cert, index| %>
                    <% c = chain_cert.is_a?(Hash) ? chain_cert.with_indifferent_access : {} %>
                    <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                      <span class="flex-shrink-0 w-6 h-6 bg-retro-purple text-white rounded-full flex items-center justify-center text-xs font-bold"><%= index + 1 %></span>
                      <div class="min-w-0">
                        <div class="font-mono font-bold text-sm truncate"><%= c[:common_name] || c[:subject] %></div>
                        <div class="text-xs text-gray-500 truncate"><%= c[:issuer_organization] || c[:issuer_name] %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-4 bg-retro-red-light rounded-lg border border-retro-red">
            <div class="flex items-center gap-2 text-retro-red font-bold">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= ssl[:error] || "SSL certificate check failed" %>
            </div>
          </div>
        <% end %>
      </section>
    <% end %>

    <%# HTTP Security Headers Section %>
    <% if @domain_check.http_data.present? %>
      <section class="sticky-card p-6 card-hover">
        <div class="absolute bottom-0 left-0 right-0 h-3 stripes-blue rounded-b-sm"></div>
        
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-retro-blue rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-extrabold">Security Headers</h2>
        </div>
        
        <% http = @domain_check.http_data.with_indifferent_access %>
        <% if http[:success] %>
          <div class="space-y-6">
            <div class="grid grid-cols-3 gap-4">
              <div class="p-4 rounded-lg <%= http[:https_response].present? && http.dig(:https_response, :success) ? 'bg-retro-green-light' : 'bg-retro-red-light' %>">
                <div class="flex items-center gap-2">
                  <% if http[:https_response].present? && http.dig(:https_response, :success) %>
                    <span class="status-dot-healthy"></span>
                  <% else %>
                    <span class="status-dot-critical"></span>
                  <% end %>
                  <span class="font-bold text-sm">HTTPS</span>
                </div>
                <div class="text-xs text-gray-600 mt-1">
                  <%= http[:https_response].present? && http.dig(:https_response, :success) ? 'Available' : 'Not Available' %>
                </div>
              </div>
              
              <div class="p-4 rounded-lg <%= http[:redirects_to_https] ? 'bg-retro-green-light' : 'bg-retro-orange-light' %>">
                <div class="flex items-center gap-2">
                  <% if http[:redirects_to_https] %>
                    <span class="status-dot-healthy"></span>
                  <% else %>
                    <span class="status-dot-warning"></span>
                  <% end %>
                  <span class="font-bold text-sm">Redirect</span>
                </div>
                <div class="text-xs text-gray-600 mt-1">
                  <%= http[:redirects_to_https] ? 'HTTP ‚Üí HTTPS' : 'No redirect' %>
                </div>
              </div>
              
              <div class="p-4 rounded-lg bg-cream">
                <div class="flex items-center gap-2">
                  <% response_time = http.dig(:https_response, :response_time_ms) %>
                  <% if response_time %>
                    <% if response_time < 500 %>
                      <span class="status-dot-healthy"></span>
                    <% elsif response_time < 2000 %>
                      <span class="status-dot-warning"></span>
                    <% else %>
                      <span class="status-dot-critical"></span>
                    <% end %>
                  <% end %>
                  <span class="font-bold text-sm">Response</span>
                </div>
                <div class="text-xs text-gray-600 mt-1">
                  <%= response_time ? "#{response_time}ms" : 'N/A' %>
                </div>
              </div>
            </div>

            <% if http[:security_headers].present? %>
              <div>
                <div class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">Security Headers</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  <% http[:security_headers].each do |header_name, header_info| %>
                    <% info = header_info.is_a?(Hash) ? header_info.with_indifferent_access : {} %>
                    <div class="p-3 rounded-lg border-2 <%= info[:present] ? 'border-retro-green bg-retro-green-light/30' : 'border-gray-200 bg-gray-50' %>">
                      <div class="flex items-center justify-between mb-1">
                        <span class="font-bold text-sm"><%= info[:name] || header_name %></span>
                        <% if info[:present] %>
                          <span class="px-2 py-0.5 text-xs font-bold bg-retro-green text-white rounded-full">‚úì</span>
                        <% else %>
                          <span class="px-2 py-0.5 text-xs font-bold bg-gray-300 text-gray-600 rounded-full">‚Äì</span>
                        <% end %>
                      </div>
                      <div class="text-xs text-gray-500"><%= info[:description] %></div>
                      <% if info[:present] && info[:value].present? %>
                        <div class="mt-2 p-2 bg-white rounded font-mono text-xs text-gray-600 break-all"><%= truncate(info[:value].to_s, length: 80) %></div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <% if http[:server_info].present? %>
              <% server_info = http[:server_info].is_a?(Hash) ? http[:server_info].with_indifferent_access : {} %>
              <% if server_info[:server].present? || server_info[:powered_by].present? %>
