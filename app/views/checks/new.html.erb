<div class="max-w-2xl mx-auto">
  <%# Hero section with playful styling %>
  <div class="text-center mb-12">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4 tracking-tight">
      Domain Health
      <span class="relative inline-block">
        Check
        <svg class="absolute -bottom-2 left-0 w-full h-3 text-retro-yellow" viewBox="0 0 200 12" fill="currentColor">
          <path d="M0 8 Q50 0, 100 8 T 200 8 L200 12 L0 12 Z"/>
        </svg>
      </span>
    </h1>
    <p class="text-lg text-gray-600 max-w-md mx-auto">
      Get instant insights into your domain's DNS, SSL, email security, and more.
    </p>
  </div>

  <%# Main input card styled as sticky note %>
  <div class="sticky-card tape-corners p-8 pt-10 rotate-subtle-right card-hover">
    <div class="absolute bottom-0 left-0 right-0 h-3 stripes-purple rounded-b-sm"></div>
    
    <%= form_with model: @domain_check, url: checks_path, local: true, class: "space-y-8" do |form| %>
      <% if @domain_check.errors.any? %>
        <div class="p-4 bg-retro-red-light border-l-4 border-retro-red rounded-r-lg">
          <div class="flex items-center gap-2 mb-1">
            <svg class="w-5 h-5 text-retro-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-bold text-red-800">Oops!</span>
          </div>
          <% @domain_check.errors.full_messages.each do |message| %>
            <div class="text-sm text-red-700"><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-bold text-gray-700 mb-3">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9"/>
            </svg>
            Domain Name
          </span>
        </label>
        <%= form.text_field :domain, 
            placeholder: "example.com", 
            class: "w-full text-2xl font-mono border-2 border-gray-200 focus:border-black rounded-lg px-4 py-4 bg-cream placeholder:text-gray-400 transition-colors",
            autofocus: true %>
      </div>

      <div class="flex items-center gap-3 p-4 bg-retro-blue-light rounded-lg border border-retro-blue/20">
        <%= form.check_box :scan_subdomains, 
            class: "w-5 h-5 text-retro-purple border-2 border-gray-300 rounded focus:ring-retro-purple focus:ring-offset-0 cursor-pointer" %>
        <%= form.label :scan_subdomains, class: "flex-1 cursor-pointer" do %>
          <span class="font-bold text-gray-800">Scan for subdomains</span>
          <span class="block text-sm text-gray-600 mt-0.5">Discover www, mail, api, and other common subdomains</span>
        <% end %>
      </div>

      <div class="pt-4">
        <%= form.submit "Run Check â†’", class: "btn-retro w-full justify-center text-lg py-4 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# Features preview cards %>
  <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="sticky-card p-4 text-center rotate-subtle-left">
      <div class="absolute bottom-0 left-0 right-0 h-2 stripes-green rounded-b-sm"></div>
      <div class="w-10 h-10 mx-auto mb-3 bg-retro-green-light rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-retro-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      </div>
      <div class="font-bold text-sm">SSL Check</div>
    </div>
    
    <div class="sticky-card p-4 text-center rotate-subtle-right">
      <div class="absolute bottom-0 left-0 right-0 h-2 stripes-blue rounded-b-sm"></div>
      <div class="w-10 h-10 mx-auto mb-3 bg-retro-blue-light rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-retro-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
        </svg>
      </div>
      <div class="font-bold text-sm">DNS Records</div>
    </div>
    
    <div class="sticky-card p-4 text-center rotate-subtle-left">
      <div class="absolute bottom-0 left-0 right-0 h-2 stripes-orange rounded-b-sm"></div>
      <div class="w-10 h-10 mx-auto mb-3 bg-retro-orange-light rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-retro-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="font-bold text-sm">Email Auth</div>
    </div>
    
    <div class="sticky-card p-4 text-center rotate-subtle-right">
      <div class="absolute bottom-0 left-0 right-0 h-2 stripes-purple rounded-b-sm"></div>
      <div class="w-10 h-10 mx-auto mb-3 bg-retro-purple-light rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-retro-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <div class="font-bold text-sm">Security</div>
    </div>
  </div>
</div>
